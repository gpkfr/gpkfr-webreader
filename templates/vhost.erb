# the IP(s) on which your node server is running. I choose port 3000.
upstream <%= @script_name %> {
  server 127.0.0.1:<%= @node_port %>;
  keepalive 512;
}

# the nginx server instance
server {
  listen 0.0.0.0:80;
  server_name <%= @server_name %>;
  access_log /var/log/nginx/<%= @script_name %>.log;

  #proxy_cache one;

  #access_log off;
  #error_log /dev/null crit;

  root <%= @nodeapp_dir %>dist/public;

  keepalive_timeout 65;

  include /etc/nginx/conf.d/*.<%= @script_name %>;

  location / {
    try_files $uri $uri/ @node;
    expires max;
  }

  location ^~ /read/ {
    try_files $uri @node;
  }

 location ~* \.(js|png|jpg)$ {
   expires 1d;
   log_not_found off;
 }

  # pass the request to the node.js server with the correct headers and much more can be added, see nginx config options
  location @node {
    proxy_buffering off;
    proxy_buffers 16 4k;
    proxy_buffer_size 2k;

    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-NginX-Proxy true;

    #proxy_cache one;
    #proxy_cache_key sfs$request_uri$scheme;

    proxy_pass http://<%= @script_name %>;
    proxy_redirect off;
  }
}
